<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:context="link.standen.michael.fatesheets.fragment.CoreCharacterEditStressFragment">

	<EditText
		android:id="@+id/value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:digits="0123456789"
		android:maxLength="1"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:hint="@string/number_zero_hint"/>

	<ImageButton
		android:id="@+id/delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@android:drawable/ic_delete"
		android:layout_alignParentEnd="true"/>

	<EditText
		android:id="@+id/description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/edit_character_consequence_hint"
		android:layout_toEndOf="@id/value"
		android:layout_toStartOf="@id/delete"/>

</RelativeLayout>
